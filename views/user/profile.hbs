<style>
    .container {
        background: var(--white);
    }
</style>
<div class="container-fluid py-5">
    <h1 class="mb-4 text-center fw-bold">Profile Settings</h1>
    <form action="/profile" method="POST" class="p-4 bg-white rounded shadow-lg mx-auto" style="max-width: 600px;">
        <!-- Username Field -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Username:</label>
            <input type="text" name="username" value="{{user.username}}" class="form-control border border-secondary"
                required />
        </div>

        <!-- Category Dropdown -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Category:</label>
            <select name="category" class="form-select border border-secondary">
                <option value="below-20" {{#if (eq user.category "below-20" )}}selected{{/if}}>Below 20</option>
                <option value="below-50" {{#if (eq user.category "below-50" )}}selected{{/if}}>Below 50</option>
                <option value="above-50" {{#if (eq user.category "above-50" )}}selected{{/if}}>Above 50</option>
            </select>
        </div>

        <!-- Student Count Field -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Student Count:</label>
            <input type="number" name="studentCount" value="{{user.studentCount}}"
                class="form-control border border-secondary" min="0" />
        </div>
        <!-- Image url -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Profile Photo Link:</label>
            <input type="text" name="profileImageURL" class="form-control border border-secondary"
                placeholder="Paste profile photo link here" value="{{user.profileImageURL}}" />
        </div>

        <!-- Google Maps Location Field -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Google Maps Embed Link:</label>
            <input type="text" name="googleMapsLink" class="form-control border border-secondary"
                placeholder="Paste Google Maps embed link here" value="{{user.googleMapsLink}}" />
            <small class="text-muted">Example: https://www.google.com/maps/embed?pb=...</small>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100 fw-bold py-2">Update Profile</button>
    </form>
</div>