<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Table: {{table.tableName}}</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background: #f5f5f5;
        }

        input[type="text"],
        input[type="number"],
        select {
            width: 100%;
            padding: 5px;
        }

        input[type="radio"] {
            margin: 0 5px;
        }

        .total-box {
            text-align: right;
            font-weight: bold;
            padding: 10px;
            background: #f5f5f5;
        }
    </style>
</head>

<body>
    <h1 class="text-center text-secondary display-6 mb-4">Edit Table: {{table.tableName}}</h1>
    <form action="/admin/table/update/{{table._id}}" method="POST" class="container mt-4">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-warning">
                    <tr>
                        <th>Row Number</th>
                        {{#each table.columns}}
                        <th>
                            <input type="text" class="form-control" name="columns[{{@index}}][name]"
                                value="{{this.name}}" required>
                            <label class="form-check-label mt-2">
                                <input type="hidden" name="columns[{{@index}}][isEditable]" value="false">
                                <input type="checkbox" class="form-check-input" name="columns[{{@index}}][isEditable]"
                                    value="true" {{#if this.isEditable}}checked{{/if}}>
                                Editable
                            </label>
                        </th>
                        {{/each}}
                    </tr>
                </thead>
                <div>

                </div>
                <tbody>
                    {{#each table.data}}
                    <tr>
                        <td>{{this.rowNumber}}</td>
                        {{#each this.columns}}
                        <td>
                            <select name="data[{{@../index}}][columns][{{@index}}][type]" class="form-select"
                                onchange="updateInput(this)">
                                <option value="text" {{#if (eq this.type "text" )}}selected{{/if}}>Text</option>
                                <option value="radio" {{#if (eq this.type "radio" )}}selected{{/if}}>Radio</option>
                                <option value="mark" {{#if (eq this.type "mark" )}}selected{{/if}}>Mark</option>
                                <option value="max-mark" {{#if (eq this.type "max-mark" )}}selected{{/if}}>Max Mark
                                </option>
                            </select>

                            <div class="input-box mt-2">
                                {{#if (eq this.type "text")}}
                                <input type="text" class="form-control"
                                    name="data[{{@../index}}][columns][{{@index}}][value]" value="{{this.value}}">
                                {{else if (eq this.type "radio")}}
                                <div>
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input"
                                            name="data[{{@../index}}][columns][{{@index}}][value]" value="Yes" {{#if (eq
                                            this.value "Yes" )}}checked{{/if}}> Yes
                                    </label>
                                    <label class="form-check-label ms-3">
                                        <input type="radio" class="form-check-input"
                                            name="data[{{@../index}}][columns][{{@index}}][value]" value="No" {{#if (eq
                                            this.value "No" )}}checked{{/if}}> No
                                    </label>
                                </div>
                                {{else if (eq this.type "mark")}}
                                <input type="number" class="form-control"
                                    name="data[{{@../index}}][columns][{{@index}}][value]" value="{{this.value}}"
                                    oninput="calculateTotal()">
                                {{else if (eq this.type "max-mark")}}
                                <input type="number" class="form-control"
                                    name="data[{{@../index}}][columns][{{@index}}][value]" value="{{this.value}}"
                                    oninput="calculateTotal()">
                                {{/if}}
                            </div>
                        </td>
                        {{/each}}
                    </tr>
                    {{/each}}
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="100%">
                            <div class="total-box alert alert-primary mt-3">
                                Total Marks: {{table.totalMarks}}
                            </div>

                            <div class="total-box alert alert-secondary mt-3">
                                Max Marks: {{table.maxMarks}}
                            </div>

                            <div class="total-box alert alert-success mt-3">
                                Percentage: {{table.percentage}}%
                            </div>

                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Save Changes</button>
    </form>


    <script>
        function updateInput(select) {
            let parent = select.closest('td');
            let inputBox = parent.querySelector('.input-box');
            let selectedType = select.value;
            let inputName = select.name.replace('[type]', '[value]');
            inputBox.innerHTML = '';

            if (selectedType === 'text') {
                inputBox.innerHTML = `<input type="text" name="${inputName}" placeholder="Enter Text">`;
            } else if (selectedType === 'radio') {
                inputBox.innerHTML = `
                <input type="radio" name="${inputName}" value="Yes"> Yes
                <input type="radio" name="${inputName}" value="No"> No
            `;
            } else if (selectedType === 'mark') {
                inputBox.innerHTML = `<input type="number" name="${inputName}" placeholder="Mark" oninput="calculateTotal()">`;
            } else if (selectedType === 'max-mark') {
                inputBox.innerHTML = `<input type="number" name="${inputName}" placeholder="Max Mark" oninput="calculateTotal()">`;
            }
        }

        function calculateTotal(fetch = false) {
            let markInputs = document.querySelectorAll('input[type="number"][placeholder="Mark"]');
            let maxMarkInputs = document.querySelectorAll('input[type="number"][placeholder="Max Mark"]');
            let total = 0;
            let maxTotal = 0;

            markInputs.forEach(input => {
                let value = Number(input.value);
                if (value < 0) {
                    input.value = '';
                    alert("Mark cannot be negative!");
                    return;
                }
                total += value || 0;
            });

            maxMarkInputs.forEach(input => {
                maxTotal += Number(input.value) || 0;
            });

            if (fetch) {
                total = Number("{{table.totalMarks}}") || 0; // ✅ Fetch Total Marks from DB
                maxTotal = Number("{{table.maxMarks}}") || 0; // ✅ Fetch Max Marks from DB
            }

            document.getElementById('totalMarks').innerText = total;
            document.getElementById('max-marks').innerText = maxTotal;

            let percentage = (total / maxTotal) * 100 || 0;
            document.getElementById('percentage').innerText = percentage.toFixed(2) + "%";

            document.getElementById('totalMarksBox').style.display = markInputs.length > 0 ? 'block' : 'none';
            document.getElementById('max-marks-box').style.display = maxMarkInputs.length > 0 ? 'block' : 'none';
            document.getElementById('percentageBox').style.display = maxTotal > 0 ? 'block' : 'none';
        }


        window.onload = function () {
            calculateTotal(true); // ✅ Call function with 'true' to fetch from DB
        };
    </script>

</body>

</html>