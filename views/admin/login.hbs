<div class="bg-light d-flex justify-content-center align-items-center vh-100">
    <div class="container text-center bg-dark p-4 rounded shadow-lg" style="max-width: 400px;">
        <h2 class="mb-4 text-uppercase fw-bold text-light">Admin Login</h2>
        {{#if success}}
        <div class="alert alert-success">{{success}}</div>
        {{/if}}

        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        <form action="/admin/login" method="POST">
            <div class="mb-3">
                <input type="text" name="username" placeholder="Username"
                    class="form-control bg-secondary border-0 text-light" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" placeholder="Password"
                    class="form-control bg-secondary border-0 text-light" required>
            </div>
            <button type="submit" class="btn btn-success w-100 text-uppercase fw-bold">Login</button>
        </form>
        <p class="mt-3 text-secondary small">Forgot Password? <a href="#" class="text-danger text-decoration-none">Click
                Here</a></p>
    </div>
</div>