<style>
    .login-wrapper {
        background: linear-gradient(to bottom, var(--accent-color) 50%, var(--white) 50%);
        padding: 20px;
    }

    .login-box {
        background: var(--dark);
        border-radius: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        padding: 50px;
        max-width: 500px;
    }

    h5 {
        color: var(--primary-color);
        margin-bottom: 20px;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .input-field {
        background-color: #f0f0f0;
        border: none;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 10px;
        box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
        font-weight: 500;
    }

    .input-field:focus {
        outline: none;
        border: 2px solid var(--accent-color);
        box-shadow: 0 0 5px var(--accent-color);
    }

    .btn-accent {
        background-color: var(--primary-color);
        color: var(--white);
        padding: 10px;
        border: none;
        border-radius: 8px;
        transition: background-color 0.3s;
        margin-top: 10px;
    }

    .btn-accent:hover {
        background-color: var(--accent-color);
        color: var(--white);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }
</style>
<div class="login-wrapper d-flex justify-content-center align-items-center vh-100">
    <div class="login-box rounded shadow-lg text-center">
        <h5 class="mb-4 text-uppercase text-light">Admin Login</h5>

        {{#if success}}
        <div class="alert alert-success">{{success}}</div>
        {{/if}}

        {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
        {{/if}}

        <form action="/admin/login" method="POST">
            <div class="mb-3">
                <input type="text" name="username" placeholder="Username" class="form-control input-field" required>
            </div>
            <div class="mb-3">
                <input type="password" name="password" placeholder="Password" class="form-control input-field" required>
            </div>
            <button type="submit" class="btn btn-accent w-100 text-uppercase fw-bold">Login</button>
        </form>

        <p class="mt-3 text-secondary small">Forgot Password?
            <a href="#" class="text-danger text-decoration-none">Click Here</a>
        </p>
    </div>
</div>